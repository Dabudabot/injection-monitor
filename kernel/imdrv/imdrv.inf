;;;
;;; injector-monitor
;;;
;;;

[Version]
Signature   = "$Windows NT$"
Class       = "ActivityMonitor"                         ;This is determined by the work this filter driver does
ClassGuid   = {b86dff51-a31e-4bac-b3cf-e8cfe75c9fc2}    ;This value is determined by the Class
Provider    = %Msft%
DriverVer   = 06/16/2007,1.0.0.0
CatalogFile = imdrv.cat


[DestinationDirs]
DefaultDestDir        = 12
imdrv.DriverFiles     = 12            ;%windir%\system32\drivers
imdrv.UserFiles       = 10,FltMgr     ;%windir%\FltMgr

;;
;; Default install sections
;;

[DefaultInstall]
OptionDesc          = %ServiceDescription%
CopyFiles           = imdrv.DriverFiles, imdrv.UserFiles

[DefaultInstall.Services]
AddService          = %ServiceName%,,imdrv.Service

;;
;; Default uninstall sections
;;

[DefaultUninstall]
DelFiles   = imdrv.DriverFiles, imdrv.UserFiles

[DefaultUninstall.Services]
DelService = %ServiceName%,0x200      ;Ensure service is stopped before deleting

;
; Services Section
;

[imdrv.Service]
DisplayName      = %ServiceName%
Description      = %ServiceDescription%
ServiceBinary    = %12%\%DriverName%.sys        ;%windir%\system32\drivers\
Dependencies     = FltMgr
ServiceType      = 2                            ;SERVICE_FILE_SYSTEM_DRIVER
StartType        = 3                            ;SERVICE_DEMAND_START
ErrorControl     = 1                            ;SERVICE_ERROR_NORMAL
LoadOrderGroup   = "FSFilter Activity Monitor"
AddReg           = imdrv.AddRegistry

;
; Registry Modifications
;

[imdrv.AddRegistry]
HKR,,"SupportedFeatures",0x00010001,0x3
HKR,"Instances","DefaultInstance",0x00000000,%DefaultInstance%
HKR,"Instances\"%Instance1.Name%,"Altitude",0x00000000,%Instance1.Altitude%
HKR,"Instances\"%Instance1.Name%,"Flags",0x00010001,%Instance1.Flags%

;
; Copy Files
;

[imdrv.DriverFiles]
%DriverName%.sys

[imdrv.UserFiles]
%UserAppName%.exe

[SourceDisksFiles]
imdrv.sys = 1,,
imapp.exe = 1,,

[SourceDisksNames]
1 = %DiskId1%,,,

;;
;; String Section
;;

[Strings]
Msft                    = "Microsoft Corporation"
ServiceDescription      = "imdrv mini-filter driver"
ServiceName             = "imdrv"
DriverName              = "imdrv"
UserAppName             = "imapp"
DiskId1                 = "imdrv Device Installation Disk"

;Instances specific information.
DefaultInstance         = "imdrv - Middle Instance"
Instance1.Name          = "imdrv - Middle Instance"
Instance1.Altitude      = "370000"
Instance1.Flags         = 0x1          ; Suppress automatic attachments
